<% @posts.each do |post| %>
    <div class="post_wrapper">
      <h2 class="title"><%= link_to post.title, post %></h2>
      <p class="date">
        Author: <%= post.user.name %><br>
        Date: <%= post.created_at.strftime("%B, %d, %Y") %><br>
        Tags: <%= raw post.tag_list.map { |t| link_to t.capitalize, tag_path(t),:style=>'color: #4d94ff;' }.join(", ") %>
      </p>
    </div>
<% end %>
