<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

    <%= f.label :user_id %>
    <%= f.text_field :user_id, id: :comment_user_id %>

  <br>

  <p>
    <%= f.submit %>
  </p>
<% end %>
